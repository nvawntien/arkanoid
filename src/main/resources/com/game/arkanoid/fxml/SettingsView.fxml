<AnchorPane stylesheets="@../css/game.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.game.arkanoid.controller.GameController">
    <children>
        <StackPane fx:id="rootStack" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Pane fx:id="gamePane" prefHeight="800" prefWidth="600" styleClass="gamePane">
                    <children>
                  <ImageView fitHeight="650.0" fitWidth="600.0" layoutY="150.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/bg_level1.png" />
                     </image>
                  </ImageView>
                        <ImageView fx:id="edge_right" fitHeight="650.0" fitWidth="22.0" layoutX="578.0" layoutY="150.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/edge_right.png" />
                            </image>
                        </ImageView>
                        <ImageView fx:id="edge_left" fitHeight="650.0" fitWidth="22.0" layoutY="150.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/edge_left.png" />
                            </image>
                        </ImageView>
                        <ImageView fx:id="edge_top" fitHeight="22.0" fitWidth="556.0" layoutX="22.0" layoutY="150.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/door_top_right_1.png" />
                            </image>
                        </ImageView>
                    </children>
                </Pane>

                            <AnchorPane fx:id="hudLayer" pickOnBounds="false" StackPane.alignment="BOTTOM_LEFT">
                    <children>
                        <HBox fx:id="lifeBox" AnchorPane.bottomAnchor="26.0" AnchorPane.leftAnchor="34.0" />

                                    <Label fx:id="livesLabel" layoutX="535.0" layoutY="79.0" styleClass="hud-label" text="1UP 3" textFill="WHITE">
                     <font>
                        <Font name="Cambria Math" size="20.0" />
                     </font>
                  </Label>
                        <Label fx:id="highScoreLabel" layoutX="539.0" layoutY="43.0" prefHeight="18.0" prefWidth="53.0" styleClass="hud-label" text="0000" textAlignment="RIGHT" textFill="WHITE">
                     <font>
                        <Font name="Cambria Math" size="20.0" />
                     </font>
                  </Label>
                        <Label fx:id="scoreLabel" layoutX="539.0" layoutY="111.0" styleClass="hud-label" text="0000" textFill="WHITE">
                     <font>
                        <Font name="Cambria Math" size="20.0" />
                     </font>
                  </Label>
                  <ImageView fitHeight="42.0" fitWidth="116.0" layoutX="416.0" layoutY="48.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/highscore.png" />
                     </image>
                  </ImageView>
                  <ImageView fitHeight="14.0" fitWidth="162.0" layoutX="414.0" layoutY="116.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/yourscore2.png" />
                     </image>
                  </ImageView>
                        <ImageView fx:id="tiltle" fitHeight="145.0" fitWidth="400.0" layoutY="7.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/logo.png" />
                            </image>
                        </ImageView>
                        <Button layoutX="539.0" layoutY="183.0" mnemonicParsing="false" prefHeight="32.0" prefWidth="29.0" text="| |" textAlignment="CENTER"
                                    
                                    onAction="#handlePauseButton"
                                    styleClass="hud-pause-button" >
                                    
                                <font>
                                    <Font name="Candara Bold Italic" size="12.0" />
                                </font>
                        </Button>
                    </children>
                </AnchorPane>

                <StackPane fx:id="bannerLayer" alignment="CENTER" managed="false" pickOnBounds="false" visible="false">
                    <children>
                        <Label fx:id="bannerLabel" alignment="CENTER" styleClass="level-banner level-banner-text" text="" />
                    </children>
                </StackPane>

                <StackPane fx:id="overlayLayer" alignment="CENTER" managed="false" pickOnBounds="true" visible="false" />
            </children>
        </StackPane>
    </children>
</AnchorPane>
