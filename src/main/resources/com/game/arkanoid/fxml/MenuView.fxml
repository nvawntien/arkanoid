<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@../css/game.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.game.arkanoid.controller.MenuController">
    <children>
        <VBox alignment="CENTER" spacing="18.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" styleClass="menu-root">
            <children>
                <Label text="ARKANOID" styleClass="menu-title" />
                <Button fx:id="startButton" defaultButton="true" onAction="#onStartGame" text="Start Game" styleClass="menu-button"/>
                <Button fx:id="settingsButton" onAction="#onOpenSettings" text="Settings" styleClass="menu-button"/>
                <Button fx:id="exitButton" cancelButton="true" onAction="#onExit" text="Exit" styleClass="menu-button"/>
            </children>
            <padding>
                <Insets top="120.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
