<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane stylesheets="@../css/game.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.game.arkanoid.controller.GameController">

    <!-- The play area; your GameController adds paddle + ball here -->
    <children>
        <Pane fx:id="gamePane" prefHeight="800" prefWidth="600" styleClass="gamePane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <ImageView fx:id="edge_left" fitHeight="650.0" fitWidth="22.0" layoutY="150.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/edge_left.png" />
                    </image>
                </ImageView>
                <ImageView fx:id="edge_top" fitHeight="22.0" fitWidth="556.0" layoutX="22.0" layoutY="150.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/door_top_right_1.png" />
                    </image>
                </ImageView>
                <ImageView fx:id="edge_right" fitHeight="650.0" fitWidth="22.0" layoutX="578.0" layoutY="150.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/edge_right.png" />
                    </image>
                </ImageView>
                <ImageView fx:id="tiltle" fitHeight="145.0" fitWidth="400.0" layoutX="11.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/logo.png" />
                    </image>
                </ImageView>

                <!-- HUD: 1UP (lives) and High Score placeholder -->
                <Label fx:id="livesLabel" layoutX="32.0" layoutY="8.0" text="1UP 3" styleClass="hud-label" />
                <Label fx:id="scoreLabel" layoutX="120.0" layoutY="8.0" text="0" styleClass="hud-label" />
                <Label fx:id="highScoreLabel" layoutX="420.0" layoutY="8.0" text="HIGH SCORE 00000" styleClass="hud-label" />
            </children>
        </Pane>
    </children>
</AnchorPane>
