<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- 
  Lưu ý: 
  Thuộc tính fx:controller này là không bắt buộc vì SceneController đã dùng 
  ControllerFactory, nhưng để nó ở đây (với package đúng) cũng không gây lỗi.
-->
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.game.arkanoid.controller.SelectLevelController">
    <children>
        <Pane prefHeight="600.0" prefWidth="600.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <ImageView fx:id="levelImageView" fitHeight="600.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="false" />
            </children>
        </Pane>
        
        <!-- THAY ĐỔI: Dùng VBox để chứa 2 hàng nút -->
        <VBox alignment="CENTER" layoutY="600.0" prefHeight="200.0" prefWidth="600.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <children>
            
                <!-- Hàng 1: Điều hướng Level -->
                <HBox alignment="CENTER" spacing="30.0">
                    <children>
                        <Button fx:id="prevButton" mnemonicParsing="false" onAction="#onPrevButton" prefHeight="50.0" prefWidth="100.0" text="Trái (&lt;)" />
                        <Label fx:id="levelNameLabel" alignment="CENTER" prefWidth="240.0" text="Tên Level" wrapText="true">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                        <Button fx:id="nextButton" mnemonicParsing="false" onAction="#onNextButton" prefHeight="50.0" prefWidth="100.0" text="Phải (&gt;)" />
                    </children>
                </HBox>
                
                <!-- Hàng 2: Nút hành động (Bắt đầu / Quay lại) -->
                <HBox alignment="CENTER" spacing="40.0">
                    <children>
                        <!-- Nút Quay Lại Menu -->
                        <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBackButton" prefHeight="50.0" prefWidth="160.0" text="Quay Lại Menu" />
                        
                        <!-- Nút Bắt Đầu (Chọn Level) -->
                        <Button fx:id="startButton" mnemonicParsing="false" onAction="#onStartGame" prefHeight="50.0" prefWidth="160.0" text="Bắt Đầu">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Button>
                    </children>
                </HBox>
                
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
        
    </children>
</AnchorPane>