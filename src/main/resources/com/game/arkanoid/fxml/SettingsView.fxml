<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@../css/game.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.game.arkanoid.controller.SettingsController">
    <children>
        <VBox alignment="CENTER" spacing="16.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" styleClass="menu-root">
            <children>   
                <Label text="Settings" styleClass="menu-title" />
                <CheckBox fx:id="soundToggle" mnemonicParsing="false" text="Sound" onAction="#onSoundToggled" styleClass="menu-toggle"/>
                <VBox alignment="CENTER" spacing="6.0">
                    <children>
                        <Label text="Master Volume" styleClass="menu-subtitle"/>
                        <Slider fx:id="masterSlider" blockIncrement="0.1" majorTickUnit="0.5" max="1.0" minorTickCount="4" snapToTicks="false" />
                    </children>
                </VBox>
                <VBox alignment="CENTER" spacing="6.0">
                    <children>
                        <Label text="Music Volume" styleClass="menu-subtitle"/>
                        <Slider fx:id="musicSlider" blockIncrement="0.1" majorTickUnit="0.5" max="1.0" minorTickCount="4" snapToTicks="false" />
                    </children>
                </VBox>
                <VBox alignment="CENTER" spacing="6.0">
                    <children>
                        <Label text="SFX Volume" styleClass="menu-subtitle"/>
                        <Slider fx:id="sfxSlider" blockIncrement="0.1" majorTickUnit="0.5" max="1.0" minorTickCount="4" snapToTicks="false" />
                    </children>
                </VBox>
                <VBox alignment="CENTER" spacing="6.0">
                    <children>
                        <Label text="Difficulty" styleClass="menu-subtitle"/>
                        <ComboBox fx:id="difficultyCombo" onAction="#onDifficultyChanged" prefWidth="200.0" />
                    </children>
                </VBox>
                <Button onAction="#onBack" text="Back" styleClass="menu-button" />
            </children>
            <padding>
                <Insets top="110.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
