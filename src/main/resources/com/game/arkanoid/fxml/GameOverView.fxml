<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="600.0" stylesheets="@../css/game.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.game.arkanoid.controller.GameOverController">

    <children>
      <Pane prefHeight="800.0" prefWidth="600.0" styleClass="gameover-bg">
         <children>
            <ImageView fitHeight="60.0" fitWidth="216.0" layoutX="126.0" layoutY="365.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/unnamed.jpg" />
               </image>
            </ImageView>
              <!-- Hình nền chữ GAME OVER -->
              <ImageView fitHeight="112.0" fitWidth="425.0" layoutX="109.0" layoutY="182.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                      <Image url="@../images/gameover.png" />
                  </image>
              </ImageView>
              <Label fx:id="scoreLabel" alignment="center" layoutX="356.0" layoutY="370.0" prefHeight="47.0" prefWidth="93.0" style="-fx-text-fill: white;" text="0000">
                  <font>
                      <Font size="32.0" />
                  </font>
              </Label>
              <!-- Nút Main Menu -->
              <Button id="mainMenuButton" layoutX="126.0" layoutY="510.0" onAction="#onMainMenu" prefHeight="47.0" prefWidth="142.0" styleClass="gameover-button" />
              <!-- Nút Play Again -->
              <Button id="playAgainButton" layoutX="314.0" layoutY="510.0" onAction="#onPlayAgain" prefHeight="47.0" prefWidth="159.0" styleClass="gameover-button" />
         </children>
      </Pane>
    </children>
</AnchorPane>
