<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane fx:id="root" prefHeight="800.0" prefWidth="600.0" stylesheets="@../css/game.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.game.arkanoid.controller.MenuController">
    <children>
        <Pane prefHeight="800.0" prefWidth="600.0" styleClass="menu-root">
            <children>
                <Button fx:id="startButton" defaultButton="false" focusTraversable="false" layoutX="232.0" layoutY="613.0" onAction="#onStartGame" prefHeight="100.0" prefWidth="150.0" styleClass="menu-button" />

                <Button fx:id="optionButton" focusTraversable="false" layoutX="29.0" layoutY="689.0" onAction="#onOpenSettings" prefHeight="100.0" prefWidth="150.0" styleClass="menu-button" />

                <Button fx:id="exitButton" cancelButton="false" focusTraversable="false" layoutX="436.0" layoutY="689.0" onAction="#onExit" prefHeight="100.0" prefWidth="150.0" styleClass="menu-button" />

                <Button fx:id="continueButton" focusTraversable="false" layoutX="-150.0" layoutY="800.0" onAction="#onContinueGame" prefHeight="100.0" prefWidth="150.0" styleClass="menu-button" />
      
                            <Button fx:id="rankingButton" focusTraversable="false" layoutX="600.0" layoutY="800.0" onAction="#onShowRanking" prefHeight="100.0" prefWidth="150.0" styleClass="menu-button" />
            <ImageView fitHeight="93.0" fitWidth="430.0" layoutX="117.0" layoutY="29.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/logo.png" />
               </image>
            </ImageView>
            </children>
        </Pane>
    </children>
</AnchorPane>
